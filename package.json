{
  "name": "manga-reader",
  "displayName": "Manga Reader",
  "author": "HF101",
  "description": "Manga reader that helps enhance the manga reading experience.",
  "version": "1.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "pnpm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev-firefox": "pnpm run clear && cross-env NODE_ENV=development EXTENSION=firefox run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:background": "pnpm run build:background -- --mode development",
    "dev:js": "pnpm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:prepare build:background build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:background": "vite build --config vite.config.background.mts",
    "build:js": "vite build --config vite.config.content.mts",
    "pack": "cross-env NODE_ENV=production esno scripts/pack.ts",
    "clear": "rimraf --glob extension/dist extension/manifest.json extension.*",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.378",
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.18.0",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vueuse/core": "^13.8.0",
    "archiver": "^7.0.1",
    "chokidar": "^4.0.3",
    "cross-env": "^10.0.0",
    "emittery": "^1.2.0",
    "esno": "^4.8.0",
    "fs-extra": "^11.3.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.91.0",
    "typescript": "^5.9.2",
    "unplugin-auto-import": "^20.0.0",
    "unplugin-icons": "^22.2.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "npm:rolldown-vite@^7.1.5",
    "vue": "^3.5.20",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild"
    ]
  }
}
