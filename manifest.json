{
    "manifest_version": 3,
    "name": "Manga-Reader",
    "author": "HF101",
    "version": "0.2",
    "description": "Specialized manga reader that helps enhance the manga reading experience.",
    "icons": {
        "48": "icons/icons8-manga-48.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content_scripts/injector.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background/background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "matches": [
                "https://*/*"
            ],
            "resources": [
                "images/*.png",
                "images/*.jpg",
                "images/*.webp",
                "template/*.cur",
                "template/*.html",
                "template/*.css",
                "template/*.js"
            ]
        }
    ]
}
